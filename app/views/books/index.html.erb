<div class = "container">
	<div class = "row">
		<div class = "col-xs-3">
			<%= render 'users/usercommon', user: @user %>
			<%= render 'books/bookcommon', book: @book %>
		</div>

		<div class = "col-xs-9">
			<h1>Books</h1>

			<table class="table table-hover">
				<thead>
					<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th>favorite</th>
					<th>comments</th>
					</tr>
				</thead>

				<tbody>
					<tr>
						<% @books.each do |book| %>
							<td>
								<%= link_to user_path(book.user) do %>
								<%= attachment_image_tag book.user, :profile_image, size:"50x50", fallback:"no_image.png", format:'png' %>
								</td><% end %>
							<td><%= link_to book.title, book_path(book.id)%></td>
							<td><%= book.body %></td>
							<td><%= render 'favorites/favorite', book: book %></td>
							<td>コメント数カウント</td>
					</tr>
				</tbody>
						<% end %>
			</table>
		</div>
	</div>
</div>
