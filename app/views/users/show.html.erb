<br><br>
<% if flash[:notice] %>
      <div>
        <%= flash[:notice] %>
      </div>
<% end %>

<div class = "container">
	<div class = "row">
		<div class = "col-xs-3">
			<%= render 'users/usercommon', user: @user %>
			<%= render 'books/bookcommon', book: @book %>
		</div>

		<div class = "col-xs-9">
			<h1>Books</h1>

			<table class="table table-hover">
				<thead>
					<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					</tr>
				</thead>

				<tbody>
					<tr>
			<% @books.each do |book| %>
				<td><%= attachment_image_tag @user, :profile_image, size:"60x60", fallback:"no_image.png", format:'png' %></td>
				<td><%= link_to book.title, book_path(book.id)%></td>
				<td><%= book.body %></td>
					</tr>
				</tbody>
			<% end %>
			</table>
		</div>
	</div>
</div>